<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    android:id="@+id/cvRegister"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">

    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:text="@string/register"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/etFirstName"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:drawableLeft="@drawable/baseline_abc_24"
                android:drawablePadding="@dimen/textview_margin"
                android:hint="First Name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/etLastName"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:drawableLeft="@drawable/baseline_abc_24"
                android:drawablePadding="@dimen/textview_margin"
                android:hint="Last Name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/etEmail"
                style="@style/modifiedEditText"
                android:maxLines="1"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="@dimen/textview_margin"
                android:inputType="textEmailAddress"
                android:hint="Email"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/etRegisterUsername"
                style="@style/modifiedEditText"
                android:maxLines="1"
                android:drawableLeft="@drawable/round_person_24"
                android:drawablePadding="@dimen/textview_margin"
                android:hint="@string/username"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/etRegisterPassword"
                style="@style/modifiedEditText"
                android:hint="@string/login_password_hint"
                android:maxLines="1"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="@dimen/textview_margin"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:id="@+id/rgRole"
            style="@style/parent"
            android:layout_marginTop="@dimen/textview_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/viewParent"
                android:padding="@dimen/textview_margin"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Register as: "/>

            <RadioButton
                android:id="@+id/rbUser"
                android:padding="@dimen/textview_margin"
                android:text="User"
                style="@style/viewParent"
                android:layout_gravity="center"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbCourtOwner"
                android:padding="@dimen/textview_margin"
                android:text="Court Owner"
                android:layout_gravity="center"
                style="@style/viewParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>


        <Button
            android:id="@+id/btnRegister"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:text="Register"
            app:backgroundTint="@null"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <TextView
            android:id="@+id/tvLogin"
            style="@style/parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:text="@string/signup_login_hint"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
